# Nexus Learn Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME="Nexus Learn"
APP_VERSION="2.0.0"
APP_URL="http://localhost:8000"

# Server Configuration
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=nexus_learn_db

# Security Settings (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook
TELEGRAM_ADMIN_IDS=123456789,987654321

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# File Upload Settings
MAX_FILE_SIZE=104857600
ALLOWED_VIDEO_TYPES=mp4,webm,ogg,avi,mov
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,ppt,pptx
UPLOAD_PATH=uploads

# Email Settings (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@nexuslearn.com

# Feature Flags
ENABLE_REAL_TIME_SYNC=true
ENABLE_WEBSOCKETS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
PROMETHEUS_METRICS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO